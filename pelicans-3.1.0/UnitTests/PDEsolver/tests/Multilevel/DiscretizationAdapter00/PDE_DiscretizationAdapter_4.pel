MODULE PEL_ObjectTest#PDE_AdapterCHARMS_TEST
   
   MODULE PDE_DiscretizationAdapter_4

      $DS_x = component( $DV_X, 0 )
      $DS_y = component( $DV_X, 1 )

      MODULE iterations_trace
         output_file = "dom_4.trace"
      END MODULE iterations_trace
            
      quadrature_rule_provider = "GE_QRprovider_3"

      MODULE interpolation_check
         field = "uu_check"
         value = vector( 0.1 - 9.0*$DS_x + $DS_y + 20.0*$DS_x*$DS_y )
         dbl_epsilon = 1.e-10
         dbl_minimum = 1.e-100
      END MODULE interpolation_check
      
      MODULE values_at_vertices_check
         fields = < "uu_check" "uu" >
         dbl_epsilon = 1.e-15
         dbl_minimum = 1.e-100         
      END MODULE values_at_vertices_check
      
      MODULE PDE_DomainAndFields
         verbose_level = 1
         nb_space_dimensions = 2
         type = "finite_element"
         
         MODULE GE_Meshing
            
            concrete_name = "GE_BoxWithBoxes"
            
            vertices_coordinate_0 = regular_vector( 0.0, 1, 2.0 )
            vertices_coordinate_1 = regular_vector( 0.0, 1, 3.0 )
            mesh_polyhedron = < "GE_Segment" "GE_Rectangle" >
            
         END MODULE GE_Meshing
         
         MODULE interior_fields
            
            MODULE uu
               name = "uu"
               nb_components = 1
               element_name = "PDE_2D_Q1_4nodes"
               storage_depth = 1
               MODULE DOFs_values
                  type = "uniformly_defined"
                  value = vector( 0.1 - 9.0*$DS_x + $DS_y + 20.0*$DS_x*$DS_y )
               END MODULE DOFs_values
            END MODULE uu
            
            MODULE uu_check
               name = "uu_check"
               nb_components = 1
               element_name = "PDE_2D_Q1_4nodes"
               storage_depth = 1
               MODULE DOFs_values
                  type = "uniformly_defined"
                  value = vector( 0.1 - 9.0*$DS_x + $DS_y + 20.0*$DS_x*$DS_y )
               END MODULE DOFs_values
            END MODULE uu_check
            
         END MODULE interior_fields
         
         MODULE PDE_AdapterCHARMS
            verbose_level = 0
            type = "quasi_hierarchical_basis"
            MODULE PDE_AdaptationIndicator
               concrete_name = "PDE_GeometricIndicator"
//               refinement_indicator = in_box( $DV_X, < -0.1 -0.1 >,
//                                                     < 0.1 0.1 > )
               refinement_indicator = ( $IS_ITER = 0 ?
                                in_box( $DV_X, < -0.1 -0.1 >, < 0.1 0.1 > )
                                        :
                                false )
               unrefinement_indicator = ( $IS_ITER = 0 ?
                                false
                                        :
                                in_box( $DV_X, < -0.1 -0.1 >, < 0.1 0.1 > ) )
               nb_steps = 2
            END MODULE PDE_AdaptationIndicator
         END MODULE PDE_AdapterCHARMS

      END MODULE PDE_DomainAndFields

   END MODULE PDE_DiscretizationAdapter_4
   
END MODULE PEL_ObjectTest#PDE_AdapterCHARMS_TEST
